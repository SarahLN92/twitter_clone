  <div class="row">
      <% @tweets.each_with_index do |tweet, i| %>
      <% if i%4==0 && i!= 0%>
    </div>
    <div class ="row">
    <%end%>
      <div class="col-md-3 card">
        <%= tweet.username %>
        <%= tweet.content %>
        <%= link_to 'Show', tweet %>
        <%= link_to 'Edit', edit_tweet_path(tweet) %>
        <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>

