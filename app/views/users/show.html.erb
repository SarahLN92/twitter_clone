<h1><%= @user.username %></h1>
<p>Location: <%@user.location%></p>
<p>Bio: <%@user.bio%></p>


<%= @user.tweets.each %>

<div class="row">
    <% @user.tweets.each_with_index do |tweet, i| %>
    <% if i%4==0 && i!= 0%>
  </div>
  <div class ="row">
  <%end%>
    <div class="col-md-3 card">
      <%= link_to tweet.user.username, show_user_path(tweet.user ) %>
      <%= tweet.content %>
      <%= link_to 'Show', tweet %>
      <%= link_to 'Edit', edit_tweet_path(tweet) %>
      <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>
